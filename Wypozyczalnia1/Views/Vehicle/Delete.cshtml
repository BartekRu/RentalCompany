@model Wypozyczalnia1.Models.Vehicle

@{
    ViewData["Title"] = "Usuń pojazd";
}

<h1 class="text-center">Usuń pojazd</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h3>Czy na pewno chcesz usunąć pojazd: <strong>@Model.Model</strong>?</h3>
            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <div class="form-group mt-3">
                    <input type="submit" value="Usuń" class="btn btn-danger" />
                    <a href="@Url.Action("Index", "Vehicle")" class="btn btn-secondary">Anuluj</a>
                </div>
            </form>
        </div>
    </div>
</div>
